{
  "name": "meme-manager",
  "version": "0.1.0",
  "description": "跨平台表情包管理工具",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/desktop && pnpm dev",
    "build": "cd apps/desktop && pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "cd apps/desktop && pnpm type-check",
    "clean": "cd apps/desktop && pnpm clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
